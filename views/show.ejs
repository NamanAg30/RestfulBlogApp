<%- include("./partials/header") %>
<div class="ui main text container segment" id="inputfield">
	<div class="ui huge header"><%= blog.title %></div>
	  <div class="ui top attached ">
		  <div class="item">
	        <img class="ui centered rounded image" src="<%= blog.image %>">
			  <div class="content">
				<span><%= blog.created.toDateString() %></span>  
			  </div>
			  <div class="description">
				<p><%= blog.body %></p>
				<a href="/blogs/<%= blog._id %>/edit" class="ui red big basic button">Edit Post</a>  
			  <form id="deleteform" class="ui form" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
				  <button class="ui black big basic button">
					  Delete Post
				  </button>
				  </form>			  
			  </div>
		  </div>
	</div>
</div>      
	
	